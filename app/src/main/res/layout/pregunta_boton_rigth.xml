<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/content_encuestas"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/content_4_no_refrigeracion_vista_2">

        <LinearLayout
            android:id="@+id/header_4_no_refrigeracin_vista_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/header_encuesta">

            <TextView
                android:id="@+id/pregunta_equipo_frio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¿Puedes encenderla?"
                android:textSize="16dp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/expand_4_no_refriferacion_2">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/success"
                android:layout_marginRight="20dp"
                android:id="@+id/respuesta4b_si_equipo_frio"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/error"
                android:layout_marginLeft="20dp"
                android:id="@+id/respuesta4b_no_equipo_frio"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>