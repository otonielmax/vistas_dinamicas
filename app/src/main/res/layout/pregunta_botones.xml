<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/content_encuestas"
        android:layout_marginBottom="10dp"
        android:id="@+id/content_equipo_frio">

        <LinearLayout
            android:id="@+id/header_equipo_frio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/header_encuesta">

            <TextView
                android:id="@+id/pregunta_equipo_frio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 - Â¿El enfriador esta encendido?"
                android:textSize="16dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/expand_equipo_frio">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/success"
                android:layout_marginRight="20dp"
                android:id="@+id/si_equipo_frio"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/error"
                android:layout_marginLeft="20dp"
                android:id="@+id/no_equipo_frio"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>