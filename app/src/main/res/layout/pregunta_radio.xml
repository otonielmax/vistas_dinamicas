<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/content_equipo_frio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/content_encuestas"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/header_equipo_frio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/header_encuesta">

            <TextView
                android:id="@+id/pregunta_equipo_frio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 - Â¿Cuantas puertas tiene la nevera?"
                android:textSize="16dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/expand_equipo_frio">

            <RadioGroup
                android:id="@+id/respuesta_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">


            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>